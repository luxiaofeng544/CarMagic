<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5.0dip"
    android:paddingTop="5.0dip">

    <RelativeLayout
        android:id="@+id/rl_message_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:paddingBottom="5.0dip"
        android:paddingTop="5.0dip">

        <TextView
            android:id="@id/list_item_textView_SendTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/list_item_textView_Name"
            android:layout_marginRight="10.0dip"
            android:text="Time"
            android:textColor="@color/black" />

        <TextView
            android:id="@id/list_item_textView_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8.0dip"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="16.0sp" />

        <TextView
            android:id="@id/list_item_textView_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/list_item_textView_Name"
            android:layout_below="@id/list_item_textView_Name"
            android:text="TextView"
            android:textColor="@color/black" />

        <TextView
            android:id="@id/list_item_textView_ReTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/list_item_textView_Status"
            android:layout_alignBottom="@id/list_item_textView_Status"
            android:layout_alignLeft="@id/list_item_textView_SendTime"
            android:text=""
            android:textColor="@color/black" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_statue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/point"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"/>
    </LinearLayout>

</LinearLayout>