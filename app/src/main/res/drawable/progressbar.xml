<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient android:startColor="#ffdddddd" android:endColor="#ffdddddd" android:angle="0.0" android:centerColor="#ffdddddd" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient android:startColor="#ff008bea" android:endColor="#ff008bea" android:angle="0.0" />
            </shape>
        </clip>
    </item>
</layer-list>