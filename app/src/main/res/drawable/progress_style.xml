<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background"> 背景层
<shape>
            <corners android:radius="8.0dip" />
            <gradient android:startColor="#ffffffff" android:endColor="#ffe3dcd7" android:angle="270.0" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress"> 缓冲层
<shape>
            <corners android:radius="8.0dip" />
            <gradient android:startColor="#ffffffff" android:endColor="#ffe3dcd7" android:angle="270.0" />
        </shape>
    </item>
    <item android:id="@android:id/progress">进度层
<clip>
            <shape>
                <corners android:radius="8.0dip" />
                <gradient android:startColor="#ffffffff" android:endColor="#ffff7700" android:angle="270.0" android:centerColor="#ffff7700" />
            </shape>
        </clip>
    </item>
</layer-list>